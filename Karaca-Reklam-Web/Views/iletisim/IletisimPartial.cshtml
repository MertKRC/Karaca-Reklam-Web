@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form", @class = "form-area contact-form text-right", action = "" }))
{
    <div class="row">
        <div class="col-lg-6 form-group">
            <input name="Name" placeholder="Adınız" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Lütfen Adınızı giriniz'" class="common-input mb-20 form-control" required="" type="text">

            <input name="Email" placeholder="E-Posta adresiniz" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Lütfen E-Posta adresinizi giriniz'" class="common-input mb-20 form-control" required="" type="email">

            <input name="Subject" placeholder="Konu" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mesajın Konusunu giriniz" class="common-input mb-20 form-control" required="" type="text">
        </div>
        <div class="col-lg-6 form-group">
            <textarea rows="6" class="common-textarea form-control" name="Message" placeholder="Mesajınız" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Lütfen mesajınızı giriniz'" required=""></textarea>
        </div>
        <div class="col-lg-12">
            <div class="alert-msg" style="text-align: left;"></div>
            <input type="submit" value="E-Posta Gönder" class="genric-btn primary" style="float: right; height: 120%; font-size: 1em" />
            @if (ViewBag.Success == true)
            {
                <span>Mesajınız başarıyla gönderilmiştir.</span>
            }
        </div>
    </div>

}