<!-- Start contact-page Area -->
<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row">
            <iframe class="map-wrap" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d755.1012852502098!2d29.434936429236974!3d40.79709011396192!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cb208bdfb0ca8f%3A0xeb086187f504bbf4!2sHac%C4%B1halil+Mahallesi%2C+1210.+Sk.+No%3A5%2C+41400+Gebze%2FKocaeli!5e0!3m2!1str!2str!4v1547300621255" width="100%" height="445" frameborder="0" style="border:0" allowfullscreen></iframe>
            <div class="col-lg-4 d-flex flex-column address-wrap">
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-home"></span>
                    </div>
                    <div class="contact-details">
                        <h5>Gebze, KOCAELİ</h5>
                        <p>
                            Hacıhalil Mah. 1211 Sok. No:5
                        </p>
                    </div>
                </div>
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-phone-handset"></span>
                    </div>
                    <div class="contact-details">
                        <h5>+90 (551) 732 85 42</h5>
                        <p>Pazartesi - Cuma : 09:00 - 19:00</p>
                        <p>Cumartesi : 09:00 - 13:00</p>
                    </div>
                </div>
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-envelope"></span>
                    </div>
                    <div class="contact-details">
                        <h5>mrtkrc41@gmail.com</h5>
                        <p>E-posta yoluyla istediğiniz zaman destek alabilirsiniz !</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <form class="form-area contact-form text-right" id="myForm" action="mail.php" method="post">
                    <div class="row">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form", action = "" }))
                        {
                            <div class="col-lg-6 form-group">
                                <input name="Name" placeholder="Adınız" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Lütfen Adınızı giriniz'" class="common-input mb-20 form-control" required="" type="text">

                                <input name="Email" placeholder="E-Posta adresiniz" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Lütfen E-Posta adresinizi giriniz'" class="common-input mb-20 form-control" required="" type="email">

                                <input name="Subject" placeholder="Konu" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mesajın Konusunu giriniz" class="common-input mb-20 form-control" required="" type="text">
                            </div>
                            <div class="col-lg-6 form-group">
                                <textarea class="common-textarea form-control" name="Message" placeholder="Mesajınız" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Lütfen mesajınızı giriniz'" required=""></textarea>
                            </div>
                            <div class="col-lg-12">
                                <div class="alert-msg" style="text-align: left;"></div>
                                @*<button class="genric-btn primary" style="float: right;">E-Posta Gönder</button>*@
                                <input type="submit" value="E-Posta Gönder" class="genric-btn primary" style="float: right;" />
                                @if (ViewBag.Success == true)
                                {
                                <span>Mesajınız başarıyla gönderilmiştir.</span>
                                }
                            </div>

                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- End contact-page Area -->
